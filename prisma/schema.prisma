generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id             String        @id @default(cuid())
  email          String        @unique
  habiticaUserId String?       @unique
  habiticaApiKey String?       @unique
  tasks          Task[]
  taskHistories  TaskHistory[]
  shortcuts      Shortcut[]
}

model Task {
  id        String @id @default(cuid())
  title     String
  profile   User   @relation(fields: [profileId], references: [id])
  profileId String
}

model TaskHistory {
  id        String   @id @default(cuid())
  date      DateTime
  status    String
  taskId    String
  Profile   User?    @relation(fields: [profileId], references: [id])
  profileId String?
}

model Shortcut {
  id        String  @id @default(cuid())
  title     String
  command   Json
  Profile   User?   @relation(fields: [profileId], references: [id])
  profileId String?
}
